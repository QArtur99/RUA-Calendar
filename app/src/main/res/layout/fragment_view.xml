<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.artf.ruacalendar.MainUse">

    <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        app:compactCalendarBackgroundColor="@color/colorBackgroundLight"
        app:compactCalendarCurrentDayBackgroundColor="@color/colorBackgroundTime"
        app:compactCalendarCurrentDayIndicatorStyle="no_fill_large_indicator"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/blue800"
        app:compactCalendarCurrentSelectedDayIndicatorStyle="fill_large_indicator"
        app:compactCalendarEventIndicatorStyle="small_indicator"
        app:compactCalendarOtherMonthDaysTextColor="@color/otherDays"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextColor="#000"
        app:compactCalendarTextSize="12sp" />

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/compactcalendar_view"
        app:columnGap="4dp"
        app:dayBackgroundColor="@color/colorBackgroundLight"
        app:eventTextColor="@android:color/white"
        app:headerColumnBackground="@color/white"
        app:headerColumnPadding="6dp"
        app:headerColumnTextColor="@color/colorPrimaryDark"
        app:headerRowBackgroundColor="@color/colorPrimary"
        app:headerRowPadding="6dp"
        app:hourHeight="60dp"
        app:noOfVisibleDays="3"
        app:textSize="12sp"
        app:todayBackgroundColor="@color/colorBackgroundLight"
        app:todayHeaderTextColor="@color/colorAccent" />
</RelativeLayout>